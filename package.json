{
  "name": "MVP",
  "private": true,
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://dev.a"
  },
  "scripts": {
    "deploy:contracts": "yarn workspace @resource/blockchain run deploy:smart-contracts",
    "build:contracts": "yarn workspace contracts run build",
    "clear": "yarn workspaces foreach --parallel run clear",
    "rm:did:autogen": "rm -f .did.autogenerated 2>/dev/null",
    "generate-did": "yarn rm:did:autogen && yarn exec node ./services/handshake/scripts/generate-did-key.js \".did.autogenerated\" \"$@\" && echo 'Did keys generated inside .did.autogenerated file'",
    "prebuild": "yarn workspace @resource/types run build",
    "build": "yarn run prebuild && yarn workspaces foreach --parallel --topological-dev --verbose run build",
    "build:packages": "yarn workspaces foreach --parallel --topological-dev --verbose --include '@resource/*|@interop/did-web-resolver|@digitalbazaar/*' run build",
    "test": "yarn workspaces foreach --parallel --topological-dev --verbose run test",
    "test:packages": "yarn workspaces foreach --parallel --topological-dev --verbose --include '@resource/*' run test",
    "coverage": "yarn workspaces foreach --parallel run coverage",
    "format": "yarn run g:format './'",
    "g:format": "cd $INIT_CWD && prettier --write --loglevel warn",
    "lint": "yarn workspaces foreach --parallel run lint",
    "g:del": "cd $INIT_CWD && del",
    "g:cpy": "cd $INIT_CWD && cpy --no-overwrite",
    "g:esbuild": "cd $INIT_CWD && find . -path './src/*' -name '*.ts' -or -name '*.tsx' | sed -e 's/^/\"/' -e 's/$/\"/' | tr '\n' ' ' | xargs esbuild --outdir=./build --sourcemap --log-level=warning",
    "g:esbuild:node": "cd $INIT_CWD && yarn run g:esbuild --platform=node",
    "g:esbuild:node:esm": "cd $INIT_CWD && yarn run g:esbuild:node --format=esm",
    "g:esbuild:node:cjs": "cd $INIT_CWD && yarn run g:esbuild:node --format=cjs",
    "g:esbuild:browser": "cd $INIT_CWD && yarn run g:esbuild --platform=browser",
    "g:tsc": "cd $INIT_CWD && tsc",
    "g:postbuild": "cd $INIT_CWD && yarn run g:cpy --cwd=./src './**/*' '!./**/*.ts*' ./build",
    "g:eslint": "cd $INIT_CWD && eslint --color",
    "test:unit": "NODE_OPTIONS=--max-old-space-size=4096 yarn workspaces foreach --since --verbose -pR run test:unit --color --detectOpenHandles --forceExit",
    "test:integration": "yarn workspaces foreach --since --verbose -pR run test:integration --color --detectOpenHandles --forceExit",
    "test:integration:mb": "yarn workspaces foreach --since --verbose -pR run test:integration:mb --color --detectOpenHandles --forceExit",
    "test:integration:blockchain": "yarn workspaces foreach --since --verbose -pR run test:integration:blockchain --color --detectOpenHandles --forceExit",
    "test:integration:db:script": "./scripts/start_and_run.sh",
    "test:integration:db": "NODE_OPTIONS=--max-old-space-size=4096 yarn workspaces foreach --since --verbose -R run test:integration:db --color --detectOpenHandles --forceExit",
    "prepare": "husky install",
    "postinstall": "husky install"
  },
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*",
    "contracts",
    "scripts"
  ],
  "devDependencies": {
    "@types/node": "20.5.0",
    "@typescript-eslint/eslint-plugin": "5.51.0",
    "@typescript-eslint/parser": "5.51.0",
    "cpy-cli": "4.2.0",
    "del-cli": "5.0.0",
    "esbuild": "0.17.15",
    "eslint": "8.14.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-functional": "4.4.1",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.3",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.3",
    "lint-staged": "13.2.0",
    "prettier": "2.8.7",
    "prettier-plugin-sort-json": "1.0.0",
    "storybook": "6.5.15",
    "ts-jest": "29.1.1",
    "ts-node": "10.3.0",
    "typescript": "4.8.2"
  },
  "author": "ka",
  "resolutions": {
    "@types/react": "17.0.56",
    "esbuild": "0.17.15"
  },
  "packageManager": "yarn@3.3.1"
}
